<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/row_selector"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/item_success_example_avatar"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="12dp"
        android:src="@mipmap/moren" />

    <TextView
        android:id="@+id/item_success_example_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/item_success_example_avatar"
        android:layout_marginTop="1dp"
        android:layout_toLeftOf="@+id/item_success_example_right_iv"
        android:layout_toRightOf="@id/item_success_example_avatar"
        android:singleLine="true"
        android:text="江先生"
        android:textColor="@color/black"
        android:textSize="17dp" />

    <TextView
        android:id="@+id/item_success_example_money"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/item_success_example_name"
        android:layout_below="@id/item_success_example_name"
        android:layout_marginTop="1dp"
        android:textStyle="bold"
        android:text="￥50000"
        android:singleLine="true"
        android:layout_toLeftOf="@+id/item_success_example_right_iv"
        android:textColor="@color/title_back_bgcolor"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/item_success_example_create_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/item_success_example_money"
        android:layout_below="@id/item_success_example_money"
        android:layout_marginTop="1dp"
        android:singleLine="true"
        android:layout_toLeftOf="@+id/item_success_example_right_iv"
        android:paddingBottom="12dp"
        android:text="2015-12-1 15:30"
        android:textColor="#737373"
        android:textSize="11sp" />

    <ImageView
        android:id="@+id/item_success_example_right_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="21dp"
        android:paddingTop="10dp"
        android:src="@mipmap/fanhui" />

</RelativeLayout>