<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/row_selector"
    android:paddingTop="12dp"
    android:paddingBottom="12dp"
    android:orientation="vertical">

    <TextView
        android:singleLine="true"
        android:layout_toLeftOf="@+id/item_success_example_right_iv"
        android:id="@+id/item_success_example_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="江先生"
        android:textColor="@color/black"
        android:textSize="17dp" />

    <RelativeLayout
        android:id="@+id/layout_money"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/item_success_example_right_iv"
        android:layout_alignLeft="@id/item_success_example_name"
        android:layout_below="@id/item_success_example_name"
        android:layout_marginTop="1dp">

        <ImageView
            android:id="@+id/item_qian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@mipmap/qian" />

        <TextView
            android:id="@+id/item_success_example_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/item_qian"
            android:singleLine="true"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="1dp"
            android:layout_toRightOf="@id/item_qian"
            android:text="￥50000"
            android:textColor="#e61600"
            android:textSize="16sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/item_success_example_right_iv"
        android:layout_alignLeft="@id/layout_money"
        android:layout_below="@id/layout_money"
        android:layout_marginTop="1dp">

        <ImageView
            android:id="@+id/item_shijian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@mipmap/shijian" />

        <TextView
            android:id="@+id/item_success_example_create_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:layout_alignTop="@id/item_shijian"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="1dp"
            android:layout_toRightOf="@id/item_shijian"
            android:text="申请时间:2015-12-1 15:30"
            android:textColor="#737373"
            android:textSize="11sp" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/item_success_example_right_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="21dp"
        android:paddingTop="10dp" />

</RelativeLayout>