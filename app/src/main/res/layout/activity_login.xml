<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/act_bg"
    android:orientation="vertical">

    <include layout="@layout/title_bar" />

    <cn.fpower.financeservice.view.widget.ClearEditText
        android:id="@+id/view_mobile"
        style="@style/edittext_linput"
        android:layout_width="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="22dp"
        android:inputType="number"
        android:hint="@string/input_mobile"
        android:maxLength="11" />

    <Button
        android:background="@drawable/s_round_group_red"
        android:textSize="17sp"
        android:textColor="@color/white"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="22dp"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:text="@string/login_in"
        android:id="@+id/loginin" />

    <TextView
        android:id="@+id/des"
        android:visibility="gone"
        android:text="如需帮助，请致电010-5768421"
        android:layout_marginTop="12dp"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:textSize="12sp"
        android:textColor="@color/text_des"
        android:layout_height="wrap_content" />

</LinearLayout>